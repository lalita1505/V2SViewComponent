
@model V2SViewComponent.Models.Employee

<form asp-action="@ViewBag.FormAction">
    <span class="text-danger">@ViewBag.Message</span>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if(ViewBag.FormAction == "Edit"){
        <input type="hidden" name="Id" value="@Model.Id" />
    }
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DOB" class="control-label"></label>
        <input asp-for="DOB" type="date" class="form-control" />
        @*<input asp-for="DOB" asp-format="{0:dd/MM/yyyy}" class="form-control" />*@
        @*<input asp-for="DOB" value="@Model.DOB.ToString("dd/MM/yyyy")" class="form-control" />*@
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Designation" class="control-label"></label>
        <input asp-for="Designation" class="form-control" />
        <span asp-validation-for="Designation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Technology" class="control-label"></label>
        <input asp-for="Technology" class="form-control" />
        <span asp-validation-for="Technology" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="YearsOfExperience" class="control-label"></label>
        <input asp-for="YearsOfExperience" class="form-control" />
        <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
